# HealthProof Environment Variables
# Copy this file to .env.local for local development

# =============================================================================
# DATABASE (Required)
# =============================================================================
# PostgreSQL connection string with pgvector extension
# Railway provides this automatically when Postgres is attached
DATABASE_URL="postgresql://user:password@localhost:5432/healthproof?schema=public"

# =============================================================================
# REDIS (Required)
# =============================================================================
# Redis connection string for BullMQ job queue
# Railway provides this automatically when Redis is attached
REDIS_URL="redis://localhost:6379"

# =============================================================================
# AUTH.JS / NEXTAUTH (Required)
# =============================================================================
# Generate with: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here"

# Base URL of your app (used for OAuth callbacks)
# In production, this should be your Railway URL
NEXTAUTH_URL="http://localhost:3000"

# =============================================================================
# OAUTH PROVIDERS (Optional - at least one recommended)
# =============================================================================

# Google OAuth
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth
# Create at: https://github.com/settings/developers
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# =============================================================================
# OPENAI (Required)
# =============================================================================
# OpenAI API key for embeddings, moderation, and synthesis
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=""

# =============================================================================
# PUBMED / NCBI (Optional but Recommended)
# =============================================================================
# NCBI API key increases rate limits from 3/sec to 10/sec
# Get from: https://www.ncbi.nlm.nih.gov/account/settings/
NCBI_API_KEY=""

# =============================================================================
# STRIPE (Phase 3 - Not needed for MVP)
# =============================================================================
# Stripe keys for subscription management
# Get from: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=""
# STRIPE_PUBLISHABLE_KEY=""
# STRIPE_WEBHOOK_SECRET=""

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV="development"

# =============================================================================
# RAILWAY-SPECIFIC (Set automatically by Railway)
# =============================================================================
# RAILWAY_ENVIRONMENT
# RAILWAY_SERVICE_NAME
# PORT
